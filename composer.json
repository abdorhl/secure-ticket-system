{
    "name": "cbg/ticket-system",
    "description": "CBG Ticket Management System with PDF Report Generation",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "tecnickcom/tcpdf": "^6.10"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-strict-rules": "^1.5",
        "vimeo/psalm": "^5.0",
        "enlightn/security-checker": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "CBG\\": "classes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "security-check": "security-checker security:check",
        "phpstan": "phpstan analyse --level=8 --configuration=phpstan.neon",
        "psalm": "psalm --security-analysis",
        "phpcs": "phpcs --standard=PSR12 .",
        "test": "phpunit"
    }
}
